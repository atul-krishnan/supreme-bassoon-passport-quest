{
  "name": "passport-quest",
  "version": "0.1.0",
  "private": true,
  "description": "Passport Quest MVP monorepo (Bangalore-first, NYC-ready)",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "mobile:start": "npm run start --workspace @passport-quest/mobile",
    "mobile:ios": "npm run ios --workspace @passport-quest/mobile",
    "mobile:android": "npm run android --workspace @passport-quest/mobile",
    "mobile:typecheck": "npm run typecheck --workspace @passport-quest/mobile",
    "mobile:test": "npm run test --workspace @passport-quest/mobile",
    "mobile:test:ci": "npm run test:ci --workspace @passport-quest/mobile",
    "maestro:ios:smoke": "maestro test .maestro/ios-smoke.yaml",
    "maestro:android:smoke": "maestro test .maestro/android-smoke.yaml",
    "supabase:cli": "DOCKER_HOST=unix:///tmp/docker.sock npx --yes supabase@2.53.4",
    "supabase:up": "npm run supabase:cli -- start --workdir . --exclude vector --exclude logflare",
    "supabase:reset": "npm run supabase:cli -- db reset --yes --workdir .",
    "supabase:functions": "npm run supabase:cli -- functions serve --workdir .",
    "supabase:status": "npm run supabase:cli -- status --workdir . -o pretty",
    "supabase:test": "npm run supabase:cli -- test db --workdir .",
    "local:up": "npm run supabase:up",
    "local:reset": "npm run supabase:reset",
    "local:functions": "npm run supabase:functions",
    "local:status": "npm run supabase:status",
    "contracts:smoke": "node scripts/contracts/v1-smoke.mjs",
    "staging:gate:check": "node scripts/gates/staging-gate-check.mjs",
    "ops:check:github-config": "bash scripts/ops/check-github-config.sh",
    "ops:check:zero-cost": "bash scripts/ops/check-zero-cost-pilot.sh",
    "ops:setup:smoke-users": "node scripts/ops/setup-smoke-users.mjs",
    "ops:uat:evidence": "node scripts/ops/create-uat-evidence.mjs",
    "security:audit": "npm audit --audit-level=high",
    "security:audit:json": "npm audit --json",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "prettier": "^3.5.3"
  }
}
